{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "lib": ["dom", "es2015", "es2016", "es2017", "es2017.object"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "ES6",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "src"
  },
  "include": [
    "./src/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
