{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "module": "commonjs",
    "target": "ES6",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
