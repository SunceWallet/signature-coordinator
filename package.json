{
  "name": "@satoshipay/multisig-coordinator",
  "version": "0.0.0",
  "main": "src/index.ts",
  "scripts": {
    "precommit": "lint-staged",
    "start": "node build/index.js",
    "dev": "ts-node-dev -r dotenv/config .",
    "build": "tsc",
    "lint": "tslint --project . 'src/**/*.ts'",
    "lint:fix": "tslint --fix --project . 'src/**/*.ts'",
    "prettier": "prettier --list-different '{src,test}/**/*.{md,ts,tsx,js,json}'",
    "prettier:fix": "prettier --write '{src,test}/**/*.{md,ts,tsx,js,json}'"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "{src,test}/**/*.{md,ts,tsx,js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "SatoshiPay",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/satoshipay/backend-boilerplate/issues"
  },
  "homepage": "https://github.com/satoshipay/backend-boilerplate#readme",
  "dependencies": {
    "@godaddy/terminus": "^2.4.1",
    "@satoshipay/koa-error-response": "^0.2.1",
    "envfefe": "^1.2.0",
    "koa": "^2.3.0",
    "koa-router": "^7.3.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.30",
    "@types/supertest": "^2.0.4",
    "ava": "^0.22.0",
    "ava-ts": "^0.24.6",
    "dotenv": "^6.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.6",
    "supertest": "^3.0.0",
    "tap-xunit": "^1.7.0",
    "ts-node": "^7.0.0",
    "ts-node-dev": "^1.0.0-pre.26",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}
